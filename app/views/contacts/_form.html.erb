

<%= render 'layouts/sidenav' %>
<!-- content -->
<div class=" contacts-outer">
  <div class="container">
    <div class="row">
      <div class="col-md-3"><%= render 'layouts/mainsidenav' %>
      </div>
      <div class="col-md-9 mt-4">
        <%= form_with(model: contact, local: true) do |form| %> <!-- start of form to add new contact -->

          <div class="panel panel-default special-color form-panel">

              <div class="panel-body special-color">
                <div class="row">
                  <div class="col-md-8"><% if @contact.errors.any? %>
                    <div class="alert alert-danger">
                      <h4>Please correct the following errors:</h4>
                      <ul><% @contact.errors.full_messages.each do |message| %>
                        <li><%= message %>
                        </li>
                      </ul><% end %>
                    </div><% end %>
                  </div>
                </div>
                <div class="form-horizontal">
                  <div class="row">
                    <div class="col-md-6 no-gutters mr-1 pr-1">
                      <div class="form-group">
                        <label for="name" class="control-label col-md-3 white-text">Name</label>
                        <div class="col-md-12">
                          <%= form.text_field :name, id: :contact_name, class: 'form-control rounded-0' %>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="company" class="control-label col-md-3 white-text">Company</label>
                          <div class="col-md-12">
                             <%= form.text_field :company, id: :contact_company, class: 'form-control rounded-0' %>
                            </div>
                          </div>
                          <div class="form-group">
                            <label for="email" class="control-label col-md-3 white-text">Email</label>
                            <div class="col-md-12">
                               <%= form.text_field :email, id: :contact_email, class: 'form-control rounded-0' %>
                              </div>
                            </div>
                            <div class="form-group">
                              <label for="phone" class="control-label col-md-3 white-text">Phone</label>
                              <div class="col-md-12">
                                <%= form.text_field :phone, id: :contact_phone, class: 'form-control rounded-0' %>
                                </div>
                              </div>
                              <div class="form-group">
                                <label for="name" class="control-label col-md-3 white-text">Address</label>
                                <div class="col-md-12">
                                      <%= form.text_area :address, id: :contact_address, class: 'form-control rounded-0', row: '3' %>

                                </div>
                              </div>
                            </div>
                            <div class="col-md-5 form-right no-gutters ml-0 pl-0 mr-0 pr-0">
                              <div class="fileinput fileinput-new" data-provides="fileinput">
                                <div class="row">
                                  <div class="col-md-6 pl-4 ">
                                    <div class="fileinput-new thumbnail" style="width: 150px; height: 150px;">
                                      <img src="http://placehold.it/150x150" alt="Photo">
                                      </div>
                                    </div>
                                    <div class="col-md-6">
                                      <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
                                      <div class="text-center">
                                        <span class="btn default-color-dark btn-file rounded-0">
                                          <span class="fileinput-new">Choose Photo</span>
                                          <span class="fileinput-exists">Change</span>
                                          <input type="file" name="...">
                                          </span>
                                          <a href="#" class="btn btn-danger fileinput-exists rounded-0" data-dismiss="fileinput">Remove</a>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                  <div class="form-group">
                                    <div class="col-md-12  mt-4  mr-0 pr-0">
                                      <div class="pt-3">
                                      <select name="contact[group_id]" class="form-control bg-dark mb-4 rounded-0">
                                      <option value="0">Select Group</option>
                                      <% Group.all.each do |group| %>
                                      <option value="<%=group.id%>"><%= group.name %></option>
                                      <% end %>
                                      </div>
                                    </div>
                                    <div class="col-md-12">
                                      <div class="row">
                                        <div class="col-md-12 mt-4  pr-0">
                                          <a href="#" id="add-group-btn" class="btn mt-4  btn bg-dark mt-2 btn-block rounded-0">+ Group</a>
                                        </div>
                                        <div class="col-md-12 mt-4 pr-0" >
                                          <div class="input-group mb-3">
                                            <input type="text" name="" id="" class="form-control rounded-0  " placeholder="Type group name">
                                              <div class="input-group-append">
                                                <span class="input-group-text rounded-0 bg-secondary border-0" id="basic-addon2 ">
                                                  <i class="ion-android-done white-text "></i>
                                                </span>
                                              </div>
                                            </div>
                                          </div>
                                          <div class="panel-footer">
                                            <div class="col-md-12">

                                              <div class="row  mt-4">
                                                <div class="col">
                                                  <button type="submit" class="btn default-color-dark rounded-0">Save New Contact</button>
                                                </div>
                                                <div class="col">
                                                  <a href="#" class="btn  btn-danger  ml-0  deep-orange-text rounded-0" style="min-width: 100%;">Cancel</a>
                                                </div>
                                              </div>
                                            </div>
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </<% end %>>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
